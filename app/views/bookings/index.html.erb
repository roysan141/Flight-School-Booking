<p id="notice"><%= notice %></p>

<%= link_to 'New Booking', new_booking_path %>

<h1>Bookings</h1>
  <%= month_calendar events: @bookings do |date, bookings| %>
    <%= date %>

    <% bookings.each do |booking| %>
      <div class="booking"><ul>
        <li><%= booking.user.email if booking.user.present?%></li>
        <li><%= booking.plane.registration if booking.plane.present? %></li>
        <li><%= booking.start_time.to_s(:time) %> - <%= booking.end_time.to_s(:time) %></li>
      </ul></div>
    <% end %>
  <% end %>
