<h1>Home</h1>
<% if current_user %>
  <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
  <%= link_to 'New Booking', new_booking_path %>
  <%= link_to 'Manage Bookings', bookings_path %>
  <h1>Bookings</h1>
    <%= month_calendar events: @bookings do |date, bookings| %>
      <%= date %>

      <% bookings.each do |booking| %>
        <div class="booking"><ul>
          <li><%= booking.user.email if booking.user.present?%></li>
          <li><%= booking.plane.registration if booking.plane.present? %></li>
          <li><%= booking.calendar_time(:start_time, date) %> - <%= booking.calendar_time(:end_time, date) %></li>
        </ul></div>
      <% end %>
    <% end %>
<% else %>
  <%= link_to "Sign Up", new_user_registration_path %>
  <%= link_to "Sign In", new_user_session_path %>
<% end %>
